{
  "manifest_version": 2,
  "name": "F. ELON",
  "version": "1.0",
  "description": "Removes posts containing Elon Musk related content from reddit.com",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },

  "permissions": [
    "*://*.reddit.com/*",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content.js"]
    }
  ]
} 